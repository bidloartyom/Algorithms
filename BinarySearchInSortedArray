import java.io.BufferedReader;
import java.io.IOException;

public class Main {
    public static void main(String[] args) throws IOException {
        BufferedReader br = new BufferedReader(new java.io.InputStreamReader(System.in));
        QuickSort qs = new QuickSort();
        int[] arr = new int[10];
        for (int i = 0; i < arr.length; i++) {
            arr[i] = (int)(Math.random()*100);
        }
        qs.Sort(arr, 0, arr.length - 1);
        printArray(arr);
        System.out.println(" Which element do you want to search for?");
        int enter = Integer.parseInt(br.readLine());
        BinarySearch(arr, enter, 0, arr.length - 1);

    }
    public static void BinarySearch(int[] arr, int elem , int low, int high){
        while ( low <= high){
            int middle = ( high - low) / 2;
            if ( arr[middle] == elem){
                System.out.println(elem + " found at index " + middle);
                return;
            }else if (arr[middle] > elem){
                high = middle - 1;
            }else if ( arr[middle] < elem ){
                low = middle + 1;
            }
        }
    }
    public static void printArray(int[] arr){
        for (int i = 0; i < arr.length; i++){
            System.out.print(arr[i] + " ");
        }
        System.out.println();
    }

}
